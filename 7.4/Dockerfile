FROM nofutur3/php-tests:base-7.4

MAINTAINER Jakub Vyvazil <jakub@vyvazil.cz>

# install libs
RUN apk add --update --no-cache \
        icu-libs \
        libintl \
        libzip \
        aria2 \
        patch

RUN apk add --update --no-cache --virtual .deps \
        freetype-dev \
        libjpeg-turbo-dev \
        libpng-dev \
        gettext-dev \
        gmp-dev \
        icu-dev \
        oniguruma-dev \
        libxml2-dev \
        ldb-dev \
        libzip-dev \
        autoconf \
        g++ \
        make \
        pcre-dev \
        wget


# amqp extension
RUN apk add rabbitmq-c rabbitmq-c-dev autoconf g++ make \
    && pecl install amqp \
    && docker-php-ext-enable amqp

# zip extension
RUN docker-php-ext-configure zip && docker-php-ext-install zip

# GD extension
RUN apk add --no-cache freetype libpng libjpeg-turbo freetype-dev libpng-dev libjpeg-turbo-dev && \
  docker-php-ext-configure gd \
  && NPROC=$(grep -c ^processor /proc/cpuinfo 2>/dev/null || 1) && \
  docker-php-ext-install -j${NPROC} gd && \
  apk del --no-cache freetype-dev libpng-dev libjpeg-turbo-dev

# bcmath extension
RUN docker-php-ext-configure bcmath --enable-bcmath && docker-php-ext-install bcmath


# install php extensions
RUN docker-php-ext-install \
    iconv \
    mbstring \
    pdo \
    pdo_mysql \
    soap \
    intl \
    sockets

RUN php -m

RUN apk del .deps && \
    rm -rf /var/cache/apk/*
